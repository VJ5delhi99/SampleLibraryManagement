@using LibraryManagementSystem.Models.User
@model LibraryManagementSystem.Models.User.UserIndexModel
@{
    ViewBag.Title = "User Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>User Index</h3>
<div id="patronIndex">
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp customTable" id="userIndexTable">
        <thead>
            <tr>
                <th>Profile Link</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Library Card Id</th>
                <th>Overdue Fees</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td id="userIcon"><a  href="/User/Detail/@user.Id"><i class="fa fa-user fa-2x"></i></a></td>
                    <td>@user.LastName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LibraryCardId</td>
                    <td>@user.OverdueFees</td>
                </tr>
            }
        </tbody>
    </table>
</div>
